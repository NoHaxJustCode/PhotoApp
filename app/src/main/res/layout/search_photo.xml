<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/search_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Spinner
        android:id="@+id/search_category_spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_text_view"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:spinnerMode="dropdown" />

    <AutoCompleteTextView
        android:id="@+id/search_auto_complete_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_category_spinner"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter Value"/>

    <Spinner
        android:id="@+id/search_category_spinner2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_text_view"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:spinnerMode="dropdown" />

    <AutoCompleteTextView
        android:id="@+id/search_auto_complete_text_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_category_spinner"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter Value" />

    <Spinner
        android:id="@+id/search_criteria"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_text_view"
        android:layout_marginStart="16dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="16dp"
        android:spinnerMode="dropdown" />

    <ListView
        android:id="@+id/search_result_list_view"
        android:layout_width="match_parent"
        android:layout_height="451dp"
        android:layout_below="@+id/search_auto_complete_text_view"
        android:layout_marginTop="146dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:padding="8dp" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search_auto_complete_text_view2"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="-49dp"
        android:layout_toEndOf="@+id/search_criteria"
        android:text="Search" />

</RelativeLayout>

